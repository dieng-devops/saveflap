#!/bin/sh <% application = fetch(:application) %>
### BEGIN INIT INFO
# Provides:          <%= application %>
# Required-Start:    $local_fs $network $remote_fs $named
# Required-Stop:     $local_fs $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: <%= application %>
# Description:       This file should be used to start and stop <%= application %>.
### END INIT INFO

case "$1" in
  start)
    su - <%= application %> -c '<%= application %> start'
  ;;

  stop)
    su - <%= application %> -c '<%= application %> stop'
  ;;

  status)
    su - <%= application %> -c '<%= application %> status'
  ;;

  *)
    echo "Usage : /etc/init.d/<%= application %> {start|stop|restart|status}"
  ;;
esac
