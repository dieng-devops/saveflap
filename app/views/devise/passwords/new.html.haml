%p= t('.help')

= bootstrap_form_for resource,
                     as:   resource_name,
                     url:  password_path(resource_name),
                     html: { method: :post, class: 'm-t' } do |f|

  = f.email_field :email, required: true, autofocus: true, skip_label: true, placeholder: User.human_attribute_name('email')
  = f.primary t('.reset_password_instructions_short'), class: 'block full-width m-b'
