!!! 5
%html
  %head
    %title Flap
    = csrf_meta_tags

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    #wrapper

      = navbar container: false, static: :top, style: 'margin-bottom: 0;' do
        = navbar_header brand: 'Flap!', brand_link: root_path
        = render_navigation_menu(:topbar_right)
        .navbar-default.sidebar{ role: 'navigation' }
          .sidebar-nav.navbar-collapse
            = render_navigation_menu(sidebar_menu)

      #page-wrapper
        .row
          .col-lg-12
            = yield
